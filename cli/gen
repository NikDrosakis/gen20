#!/bin/bash

# Ensure .env is loaded
ENV_FILE="/var/www/gs/.env"
if [ -f "$ENV_FILE" ]; then
    source "$ENV_FILE"
else
    echo "‚ùå Error: Missing .env file at $ENV_FILE"
    exit 1
fi

# Source utils.sh
UTILS_FILE="$CLI_ROOT/lib/utils.sh"
if [ -f "$UTILS_FILE" ]; then
    source "$UTILS_FILE"
else
    echo "‚ùå Error: Missing utils.sh in $CLI_ROOT/lib/"
    exit 1
fi

# Start Daemon
start_daemon() {
    log "Attempting to start the daemon..."

    if [ -f "$PID_FILE" ] && kill -0 "$(cat "$PID_FILE")" 2>/dev/null; then
        log "‚ö†Ô∏è Gen daemon is already running (PID: $(cat "$PID_FILE"))"
    else
        nohup "$CLI_ROOT/bg/daemon-update.sh" &>> "$LOG_FILE" &
        echo $! > "$PID_FILE"
        log "‚úÖ Gen daemon started (PID: $(cat "$PID_FILE"))"
    fi
}

# Stop Daemon
stop_daemon() {
    if [ -f "$PID_FILE" ]; then
        PID=$(cat "$PID_FILE")
        if kill -9 "$PID" 2>/dev/null; then
            log "üõë Gen daemon stopped (PID: $PID)"
            rm -f "$PID_FILE"
        else
            log "‚ö†Ô∏è Failed to stop daemon (PID: $PID)"
        fi
    else
        log "‚ö†Ô∏è No running daemon found."
    fi
}

restart_daemon() {
    log "‚è≥ Attempting to stop daemon..."
    stop_daemon
    sleep 1  # Allow some time for the process to terminate
    log "‚è≥ Attempting to start the daemon..."
    start_daemon
}


# Display version
echo "Gen version: $GEN_VERSION"

# Ensure log function is available
log() {
    echo "[$(date '+%Y-%m-%d %H:%M:%S')] $1" | tee -a "$LOG_FILE"
}

# Check arguments
if [ -z "$1" ]; then
    log "‚ö†Ô∏è Usage: $0 <command> [args...]"
    exit 1
fi

# Handle commands
case "$1" in
    start)
        start_daemon
        ;;
    stop)
        stop_daemon
        ;;
    restart)
        restart_daemon
        ;;
    *)
        log "‚ö†Ô∏è Unknown command: $1"
        exit 1
        ;;
esac
