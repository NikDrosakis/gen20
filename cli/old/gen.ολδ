#!/bin/bash
CLI_ROOT="/var/www/gs/cli"
COMMON="$CLI_ROOT/utils.sh"
BG_DIR="$CLI_ROOT/bg"
PID_FILE="/tmp/gen-daemon.pid"
LOG_FILE="/var/www/gs/log/gen20.log"
DAEMON="$BG_DIR/daemon-update.sh"
COM_DIR="$CLI_ROOT/com"

# Ensure .env is loaded
ENV_FILE="/var/www/gs/.env"
# Check if .env file exists and source it
if [ -f "$ENV_FILE" ]; then
    # Source the .env file to load environment variables
    source "$ENV_FILE"
    # Optionally log that the variables have been exported (for debugging purposes)
    echo "üîß Environment variables have been successfully loaded and exported."
else
    # If .env file doesn't exist, log an error and exit
    echo "‚ùå Error: Missing .env file at $ENV_FILE"
    exit 1
fi

# Source utils.sh
if [ -f "$COMMON" ]; then
    source "$COMMON"
else
    error "Missing utils.sh in $CLI/lib/"
fi
# Display version
log "Gen version: $GEN_VERSION"

# Check arguments
if [ -z "$1" ]; then
    error "Usage: $0 <system> <command> [args...]"
fi

# Parse system and subcommand
COMMAND="$1"   # Second argument is the subcommand (e.g., start, status)
FILENAME="$2"   # Second argument is the subcommand (e.g., start, status)

# Check if it's a predefined daemon command (only if exactly 2 arguments are provided)
case "$COMMAND" in
    start)
        start_daemon
        exit 0
        ;;
    stop)
        stop_daemon
        exit 0
        ;;
    restart)
        restart_daemon
        exit 0
        ;;
    all)
        if [ -n "$FILENAME" ]; then
            for dir in "$COM_DIR"/*/; do
                CMD_NAME=$(basename "$dir")
                SCRIPT="$dir/$FILENAME.sh"
                if [ -f "$SCRIPT" ]; then
                    log "‚ñ∂ Running $CMD_NAME/$FILENAME.sh..."
                    bash "$SCRIPT"
                else
                    log "‚ö† No script found for $CMD_NAME/$FILENAME"
                fi
            done
        else
            log "‚ùå Error: FILENAME is not set."
            exit 1
        fi
        exit 0
        ;;
    # Handle predefined system commands
    action|ai|chat|cubo|db|domain|ermis|gaia|git|god|kronos|mars|micro|wp|ws)
 if [ -n "$FILENAME" ]; then
            SCRIPT="$COM_DIR/$COMMAND/$FILENAME.sh"
            if [ -f "$SCRIPT" ]; then
                bash "$SCRIPT"
                exit $?
            else
                log "‚ùå Error: Script not found for $COMMAND/$FILENAME"
                exit 1
            fi
        else
            log "üìÇ Listing available scripts in $COM_DIR/$COMMAND:"
            # List scripts without the .sh extension
            ls -1 "$COM_DIR/$COMMAND/" | grep -E '\.sh$' | sed 's/\.sh$//' || log "‚ö† No scripts found in $COM_DIR/$COMMAND"
            exit 0
        fi
        ;;
esac

